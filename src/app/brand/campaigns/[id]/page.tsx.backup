                            value={sectionData.required_elements?.additional_requirements || ''}
                            onChange={(e) => setSectionData({
                              ...sectionData,
                              required_elements: {
                                ...sectionData.required_elements,
                                additional_requirements: e.target.value
                              }
                            })}
                            rows={3}
                          />
                        </div>
                      </div>
                    </div>
                  </CardContent>
                </Card>

                {/* Mandatory: Prohibited Content */}
